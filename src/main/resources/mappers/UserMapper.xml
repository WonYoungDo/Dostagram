<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tawny.dostagram.user.domain.User">
	<insert id="insertJoin" parameterType="map">
		INSERT INTO
			`user`
		(
			`loginId`
			, `password`
			, `email`
			, `name`
			, `phoneNumber`
		)
		Value
		(
			#{loginId}
			, #{password}
			, #{email}
			, #{name}
			, #{phoneNumber}
		)
	</insert>
	
	<select id="selectUserList" resultType="com.tawny.dostagram.user.domain.User" parameterType="map">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `email`
			, `name`
			, `phoneNumber`
		FROM
			`user`
	</select>
</mapper>