<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.tawny.dostagram.post.repository.PostRepository">
 	<insert id="insertPost" parameterType="map">
 		INSERT INTO
 			`post`
		(
			userId
			, contents
		)
		VALUE
		(
			#{userId}
			, #{contents}
		)
 	</insert>
 	<select id="selectPost" resultType="com.tawny.dostagram.post.domain.Post">
 		SELECT
 			`id`
			, `userId`
			, `contents`
			, `imagePath`
			, `createdAT`
			, `updatedAT`
   		FROM
   			`post`
		ORDER BY 
			`id` DESC		
 	</select>
 </mapper>